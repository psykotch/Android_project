<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CardDetailPage">

    <Button
        android:id="@+id/roll_dice_stop_button2"
        android:layout_width="106dp"
        android:layout_height="70dp"
        android:background="@drawable/box"
        android:text="Stop"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/roll_dice_guideline_ver_10"

        app:layout_constraintTop_toTopOf="@+id/roll_dice_guideline_hor_75" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="169dp"
        android:layout_height="208dp"
        android:layout_marginStart="228dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="164dp"
        android:layout_height="69dp"
        android:layout_marginStart="228dp"
        android:text="card detail page"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />
</androidx.constraintlayout.widget.ConstraintLayout>